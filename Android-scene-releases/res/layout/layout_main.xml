<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" >

    <Button
        android:id="@+id/btXpeeds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:drawableTop="@drawable/icon_scene_rel_light_gray_press"
        android:onClick="getFeedsXspeeds"
		style="@style/sombreamento"
        android:text="@string/xspeeds"
        android:textColor="@color/light_blue"
        android:textStyle="bold" />
<!--         android:shadowColor="@android:color/black" -->
<!--         android:shadowDx="1.5" -->
<!--         android:shadowDy="1.5" -->
<!--         android:shadowRadius="2.0" -->

    <Button
        android:id="@+id/btxky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btXpeeds"
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:drawableTop="@drawable/icon_scene_rel_light_blue"
        android:onClick="getFeedsSky"
        android:shadowColor="@android:color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="2.0"
        android:text="@string/x_sky"
        android:textColor="@color/light_blue"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btBJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btxky"
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:drawableTop="@drawable/icon_scene_rel_gray_blue"
        android:onClick="getFeedsBj"
        android:shadowColor="@android:color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="2.0"
        android:text="@string/bj"
        android:textColor="@color/light_blue"
        android:textStyle="bold" />

</RelativeLayout>