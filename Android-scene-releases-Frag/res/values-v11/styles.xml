<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/ButtonBar</item>
        <item name="android:actionBarStyle">@style/ButtonBar</item>
    	 <item name="searchViewSearchIcon">@drawable/ic_menu_search</item>
    </style>
	
     <style name="ButtonBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
    	<item name="background">@drawable/bkg_tipo_web_azul</item>
    	<item name="android:background">@drawable/bkg_tipo_web_azul</item>
    </style>
    
    <style name="sombreamento_white">
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
    </style>
    
    <style name="sombreamento_blue">
        <item name="android:shadowColor">@color/LightBlue</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
    </style>
    
    <style name="sombreamento_black">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
    </style>
</resources>
