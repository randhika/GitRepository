<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindMeAppActivity" >

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/iv_profile_photo"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/iv_findme_photo"
        android:layout_centerHorizontal="true"
        android:fadingEdge="vertical" >
    </com.facebook.widget.ProfilePictureView>

    <ImageView
        android:id="@+id/iv_findme_photo"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fadingEdge="vertical" />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_profile_photo"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:textIsSelectable="true" />

    <com.facebook.widget.LoginButton
        android:id="@+id/fb_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_profile_photo"
        android:layout_below="@+id/bt_confirm_profile" />

    <Button
        android:id="@+id/bt_confirm_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fb_button"
        android:layout_alignRight="@+id/fb_button"
        android:layout_below="@+id/tv_profile_name"
        android:text="@string/profile_confirma"
        android:visibility="invisible" />

</RelativeLayout>