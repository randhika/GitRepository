<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindMeAppActivity" >

    <com.facebook.widget.LoginButton
        android:id="@+id/fb_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp" />

    <Button
        android:id="@+id/bt_findme_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fb_button"
        android:layout_alignRight="@+id/fb_button"
        android:layout_below="@+id/fb_button"
        android:text="@string/loginFind"
        android:drawableStart="@drawable/facebook_bt_logo"
        />

</RelativeLayout>